<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView android:id="@+id/parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardCornerRadius="7dp"
    app:cardElevation="7dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#9C6F75E6">

        <ImageView
            android:id="@+id/businessimage"
            android:layout_width="130dp"
            android:layout_height="120dp"
            android:layout_margin="15dp"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/businessname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/businessimage"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:text="Bussines Name"
            android:textColor="#000000"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/productiontextview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/businessname"
            android:layout_marginLeft="5dp"
            android:text="Production:" />

        <TextView
            android:id="@+id/upgradelevel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/productiontextview"
            android:layout_marginLeft="5dp"
            android:text="Upgrade Level:" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/buybus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:layout_toRightOf="@id/businessimage"
            android:text="BUY FOR PRICE $" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/upgradebtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:layout_toRightOf="@id/businessimage"
            android:text="UPGRADE"
            android:visibility="gone" />
        "

    </RelativeLayout>
</com.google.android.material.card.MaterialCardView>