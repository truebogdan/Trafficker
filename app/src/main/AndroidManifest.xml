<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.hatz.trafficker">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/finalavatar"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/finalavatar"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:screenOrientation="portrait" android:name="com.hatz.trafficker.HowToPlay"></activity>

        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="ca-app-pub-8017183372330773~4233256887" />

        <activity android:screenOrientation="portrait" android:name="com.hatz.trafficker.GunShop" />
        <activity android:screenOrientation="portrait"
            android:name="com.hatz.trafficker.HospitalActivity"
            android:hardwareAccelerated="true" />
        <activity android:screenOrientation="portrait" android:name="com.hatz.trafficker.BitcoinActivity" />
        <activity android:screenOrientation="portrait" android:name="com.hatz.trafficker.DealsActivity" />
        <activity android:screenOrientation="portrait" android:name="com.hatz.trafficker.BusinessActivity" />
        <activity android:screenOrientation="portrait" android:name="com.hatz.trafficker.MarketActivity" />
        <activity android:screenOrientation="portrait" android:name="com.hatz.trafficker.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>